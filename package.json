{
  "name": "css-class-intellisense",
  "displayName": "CSS Class Intellisense",
  "version": "4.6.1",
  "description": "%cssci.description%",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "icon": "images/icon.png",
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:vue",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:php",
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:sass",
    "onLanguage:less"
  ],
  "contributes": {
    "configuration": [
      {
        "title": "CSS Class Intellisense",
        "properties": {
          "cssci.lightweight": {
            "type": "boolean",
            "default": false,
            "description": "%cssci.lightweight.description%"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "cssci.clearCache",
        "title": "%cssci.clearCache%",
        "category": "CSSCI"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "cssconfig.json",
        "url": "./schemas/cssconfig.schema.json"
      }
    ]
  },
  "main": "dist/node/main.js",
  "browser": "dist/browser/main.js",
  "l10n": "l10n",
  "scripts": {
    "watch:browser": "webpack --config webpack.browser.dev.ts",
    "watch:node": "webpack --config webpack.node.dev.ts",
    "open-in-browser": "vscode-test-web --extensionDevelopmentPath=. .",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "build": "webpack --config webpack.prod.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tarrowren/css-class-intellisense.git"
  },
  "keywords": [
    "html",
    "vue",
    "react",
    "php",
    "css",
    "scss",
    "sass",
    "less",
    "class",
    "className",
    "intellisense"
  ],
  "author": "Tarrowren",
  "publisher": "tarrow",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Tarrowren/css-class-intellisense/issues"
  },
  "homepage": "https://github.com/Tarrowren/css-class-intellisense#readme",
  "devDependencies": {
    "@jest/globals": "^29.6.2",
    "@swc/core": "^1.3.72",
    "@swc/jest": "^0.2.27",
    "@swc/register": "^0.1.10",
    "@types/node": "^16.18.39",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "@vscode/test-web": "^0.0.44",
    "eslint": "^8.46.0",
    "jest": "^29.6.2",
    "swc-loader": "^0.2.3",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@lezer/common": "^1.0.3",
    "@lezer/css": "^1.1.3",
    "@lezer/html": "^1.3.6",
    "@lezer/javascript": "^1.4.5",
    "@lezer/php": "^1.0.1",
    "@lezer/sass": "^1.0.3",
    "minimatch": "^9.0.3",
    "request-light": "^0.7.0"
  }
}
