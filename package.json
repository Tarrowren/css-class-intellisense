{
  "name": "css-class-intellisense",
  "displayName": "CSS Class Intellisense",
  "version": "4.4.0",
  "description": "%cssci.description%",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "icon": "images/icon.png",
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:vue",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:php",
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:less"
  ],
  "contributes": {
    "configuration": [
      {
        "title": "CSS Class Intellisense",
        "properties": {
          "cssci.lightweight": {
            "type": "boolean",
            "default": false,
            "description": "%cssci.lightweight.description%"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "cssci.clearCache",
        "title": "%cssci.clearCache%",
        "category": "CSSCI"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "cssconfig.json",
        "url": "./schemas/cssconfig.schema.json"
      }
    ]
  },
  "main": "dist/node/main.js",
  "browser": "dist/browser/main.js",
  "l10n": "l10n",
  "scripts": {
    "watch:browser": "cross-env WEBPACK_WATCH=1 node scripts/browser.mjs",
    "watch:node": "cross-env WEBPACK_WATCH=1 node scripts/node.mjs",
    "build:browser": "cross-env NODE_ENV=production node scripts/browser.mjs",
    "build:node": "cross-env NODE_ENV=production node scripts/node.mjs",
    "lint": "eslint src --ext ts",
    "pretest": "tsc -p src/test",
    "test": "node --test out/test",
    "open-in-browser": "vscode-test-web --extensionDevelopmentPath=. ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tarrowren/css-class-intellisense.git"
  },
  "keywords": [
    "html",
    "vue",
    "react",
    "php",
    "css",
    "scss",
    "less",
    "class",
    "intellisense"
  ],
  "author": "Tarrowren",
  "publisher": "tarrow",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Tarrowren/css-class-intellisense/issues"
  },
  "homepage": "https://github.com/Tarrowren/css-class-intellisense#readme",
  "devDependencies": {
    "@types/node": "^16.18.25",
    "@types/vscode": "1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-web": "^0.0.43",
    "cross-env": "^7.0.3",
    "eslint": "^8.39.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.81.0"
  },
  "dependencies": {
    "@lezer/common": "1.0.2",
    "@lezer/css": "1.1.1",
    "@lezer/html": "^1.3.4",
    "@lezer/javascript": "^1.4.3",
    "@lezer/php": "^1.0.1",
    "minimatch": "^9.0.1",
    "node-fetch": "^3.3.1",
    "pino": "^8.11.0"
  }
}
