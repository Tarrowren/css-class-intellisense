{
  "name": "css-class-intellisense",
  "displayName": "CSS Class Intellisense",
  "version": "4.2.0",
  "description": "CSS Class Intellisense",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "icon": "images/icon.png",
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:vue",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:less"
  ],
  "contributes": {
    "configuration": [
      {
        "title": "CSS Class Intellisense",
        "properties": {
          "cssci.features.reverseCompletion": {
            "type": "boolean",
            "default": true,
            "description": "Enable id/class completion in CSS/SCSS/LESS files."
          }
        }
      }
    ],
    "commands": [
      {
        "command": "cssci.clearCache",
        "title": "Clear file cache",
        "category": "CSSCI"
      }
    ]
  },
  "main": "dist/node/main.js",
  "browser": "dist/browser/main.js",
  "scripts": {
    "watch": "tsc -w -p src/node",
    "build:browser": "node scripts/browser.mjs",
    "build:node": "node scripts/node.mjs",
    "lint": "eslint src --ext ts",
    "pretest": "tsc -p src/test",
    "test": "node --test out/test",
    "open-in-browser": "vscode-test-web --extensionDevelopmentPath=. ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tarrowren/css-class-intellisense.git"
  },
  "keywords": [
    "html",
    "vue",
    "react",
    "css",
    "scss",
    "less",
    "class",
    "intellisense"
  ],
  "author": "Tarrowren",
  "publisher": "tarrow",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Tarrowren/css-class-intellisense/issues"
  },
  "homepage": "https://github.com/Tarrowren/css-class-intellisense#readme",
  "devDependencies": {
    "@types/node": "^16.18.12",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "@vscode/test-web": "^0.0.34",
    "eslint": "^8.33.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0"
  },
  "dependencies": {
    "@lezer/common": "1.0.2",
    "@lezer/css": "1.1.1",
    "@lezer/html": "1.3.1",
    "@lezer/javascript": "1.4.1",
    "pino": "^8.10.0",
    "undici": "^5.18.0"
  }
}
